{
    "settings": {
        "index" : {
            "number_of_shards" : 1,
            "number_of_replicas" : 1
        },
        "analysis": {
            "filter": {
                "shingle": {
                    "max_shingle_size": "4",
                    "min_shingle_size": "2",
                    "type": "shingle"
                }
            },
            "analyzer": {
                "whitespace_analyzer": {
                    "filter": [
                        "lowercase",
                        "asciifolding"
                    ],
                    "type": "custom",
                    "tokenizer": "whitespace"
                },
                "trigram": {
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "shingle"
                    ],
                    "type": "custom",
                    "tokenizer": "standard"
                },
                "reverse": {
                    "filter": [
                        "lowercase",
                        "asciifolding",
                        "reverse"
                    ],
                    "type": "custom",
                    "tokenizer": "standard"
                }
            },
            "normalizer": {
                "keyword_lowercase": {
                    "type": "custom",
                    "filter": [
                        "lowercase"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "term": {
                "type": "text",
                "fields": {
                    "raw": {
                        "type": "keyword",
                        "normalizer": "keyword_lowercase"
                    },
                    "english": {
                        "type": "text",
                        "analyzer": "english"
                    },
                    "trigram": {
                        "type": "text",
                        "analyzer": "trigram"
                    }
                }
            },
            "recommendationId": {
                "type": "keyword"
            },
            "entities": {
                "properties": {
                    "name": {
                        "type": "text"
                    },
                    "description": {
                        "type": "text"
                    },
                    "code": {
                        "type": "keyword"
                    },
                    "dataSource": {
                        "type": "keyword"
                    }
                }
            }
        }
    }
}
