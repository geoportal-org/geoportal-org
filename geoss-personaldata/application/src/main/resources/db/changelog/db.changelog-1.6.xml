<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="18" author="Eversis">
        <comment>Surveys</comment>
        <createTable tableName="survey">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="from_" type="varchar(254)">
            </column>
            <column name="classification" type="varchar(254)">
            </column>
            <column name="found_looking_for" type="varchar(254)">
            </column>
            <column name="looking_for" type="varchar(254)">
            </column>
            <column name="search_criteria" type="varchar(254)">
            </column>
            <column name="visualization" type="varchar(254)">
            </column>
            <column name="adequately" type="varchar(254)">
            </column>
            <column name="interest" type="varchar(254)">
            </column>
            <column name="organized" type="varchar(254)">
            </column>
            <column name="impression" type="varchar(254)">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="19" author="Eversis">
        <comment>Surveys audit</comment>
        <addColumn tableName="survey">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="20" author="Eversis">
        <comment>Surveys audit</comment>
        <createTable tableName="survey_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="from_" type="varchar(254)">
            </column>
            <column name="classification" type="varchar(254)">
            </column>
            <column name="found_looking_for" type="varchar(254)">
            </column>
            <column name="looking_for" type="varchar(254)">
            </column>
            <column name="search_criteria" type="varchar(254)">
            </column>
            <column name="visualization" type="varchar(254)">
            </column>
            <column name="adequately" type="varchar(254)">
            </column>
            <column name="interest" type="varchar(254)">
            </column>
            <column name="organized" type="varchar(254)">
            </column>
            <column name="impression" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_survey_aud_rev_revinfo_rev"
                baseTableName="survey_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
