<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="22" author="Eversis">
        <comment>Saved runs</comment>
        <createTable tableName="saved_run">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="run_id" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="workflow_id" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="23" author="Eversis">
        <comment>Saved runs audit</comment>
        <addColumn tableName="saved_run">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="24" author="Eversis">
        <comment>Saved runs audit</comment>
        <createTable tableName="saved_run_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="user_" type="varchar(254)">
            </column>
            <column name="name" type="varchar(254)">
            </column>
            <column name="run_id" type="varchar(254)">
            </column>
            <column name="workflow_id" type="varchar(254)">
            </column>
            <column name="path" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_saved_run_aud_rev_revinfo_rev"
                baseTableName="saved_run_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
