<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="40" author="Eversis">
        <comment>API Settings</comment>
        <addColumn tableName="api_settings">
            <column name="site_id" type="bigint" value="0" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="api_settings_aud">
            <column name="site_id" type="bigint">
            </column>
        </addColumn>
        <dropIndex tableName="api_settings" indexName="ix_api_settings_set_key"></dropIndex>
        <createIndex tableName="api_settings" indexName="ix_api_settings_site_id">
            <column name="site_id"/>
        </createIndex>
        <createIndex tableName="api_settings" indexName="ix_api_settings_site_id_set_key" unique="true">
            <column name="site_id"/>
            <column name="set_"/>
            <column name="key_"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
