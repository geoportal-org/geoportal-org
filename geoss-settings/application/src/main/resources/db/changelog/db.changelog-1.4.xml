<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro
		http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="8" author="Eversis">
        <comment>API Settings</comment>
        <createTable tableName="api_settings">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="set_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="key_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="varchar(254)">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="9" author="Eversis">
        <comment>API Settings audit</comment>
        <addColumn tableName="api_settings">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="10" author="Eversis">
        <comment>API Settings audit</comment>
        <createTable tableName="api_settings_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="set_" type="varchar(254)">
            </column>
            <column name="key_" type="varchar(254)">
            </column>
            <column name="value_" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_api_settings_aud_rev_revinfo_rev"
                baseTableName="api_settings_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
    <changeSet id="11" author="Eversis">
        <createIndex tableName="api_settings" indexName="ix_api_settings_set_key" unique="true">
            <column name="set_"/>
            <column name="key_"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
