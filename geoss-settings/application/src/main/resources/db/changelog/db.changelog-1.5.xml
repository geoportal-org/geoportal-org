<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="12" author="Eversis">
        <comment>Layer Settings</comment>
        <createTable tableName="layer">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(254)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="url" type="varchar(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="visible" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="13" author="Eversis">
        <comment>Layer Settings audit</comment>
        <addColumn tableName="layer">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="14" author="Eversis">
        <comment>Layer Settings audit</comment>
        <createTable tableName="layer_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(254)">
            </column>
            <column name="url" type="varchar(2048)">
            </column>
            <column name="visible" type="boolean">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_layer_aud_rev_revinfo_rev"
                baseTableName="layer_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
