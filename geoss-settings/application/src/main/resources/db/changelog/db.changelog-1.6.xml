<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro
		http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="15" author="Eversis">
        <comment>Tutorial Tag Settings</comment>
        <createTable tableName="tag">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(254)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="show" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="placement" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="tag_title">
            <column name="tag_id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="locale" type="varchar(24)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_title_tag_id"
                baseTableName="tag_title" baseColumnNames="tag_id"
                referencedTableName="tag" referencedColumnNames="id"/>
        <createTable tableName="tag_description">
            <column name="tag_id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="locale" type="varchar(24)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="description" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_description_tag_id"
                baseTableName="tag_description" baseColumnNames="tag_id"
                referencedTableName="tag" referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="16" author="Eversis">
        <comment>Tutorial Tag Settings audit</comment>
        <addColumn tableName="tag">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="17" author="Eversis">
        <comment>Tutorial Tag Settings audit</comment>
        <createTable tableName="tag_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(254)">
            </column>
            <column name="show" type="boolean">
            </column>
            <column name="type" type="varchar(254)">
            </column>
            <column name="placement" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_aud_rev_revinfo_rev"
                baseTableName="tag_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
        <createTable tableName="tag_title_aud">
            <column name="rev" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="locale" type="varchar(24)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_title_aud_rev_revinfo_rev"
                baseTableName="tag_title_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
        <createTable tableName="tag_description_aud">
            <column name="rev" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="bigint">
            </column>
            <column name="locale" type="varchar(24)">
            </column>
            <column name="description" type="varchar(254)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_tag_description_aud_rev_revinfo_rev"
                baseTableName="tag_description_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
