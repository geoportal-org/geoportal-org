<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro
		http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="18" author="Eversis">
        <comment>Catalog Settings</comment>
        <createTable tableName="catalog">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="label" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="default_" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="catalog_option">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="catalog_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_catalog_options_catalog_id"
                baseTableName="catalog_option" baseColumnNames="catalog_id"
                referencedTableName="catalog" referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="19" author="Eversis">
        <comment>Catalog Settings audit</comment>
        <addColumn tableName="catalog">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="catalog_option">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="20" author="Eversis">
        <comment>Catalog Settings audit</comment>
        <createTable tableName="catalog_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(254)">
            </column>
            <column name="title" type="varchar(254)">
            </column>
            <column name="value_" type="varchar(254)">
            </column>
            <column name="default_" type="boolean" defaultValue="false">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_catalog_aud_rev_revinfo_rev"
                baseTableName="catalog_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
        <createTable tableName="catalog_option_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="catalog_id" type="bigint">
            </column>
            <column name="label" type="varchar(254)">
            </column>
            <column name="title" type="varchar(254)">
            </column>
            <column name="value_" type="varchar(254)">
            </column>
            <column name="default_" type="boolean" defaultValue="false">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_catalog_options_aud_rev_revinfo_rev"
                baseTableName="catalog_option_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
