<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS"
>
    <changeSet id="21" author="Eversis">
        <comment>View Settings</comment>
        <createTable tableName="view">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="label" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="default_" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="view_option">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="view_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
            <column name="value_" type="varchar(254)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_view_option_view_id"
                baseTableName="view_option" baseColumnNames="view_id"
                referencedTableName="view" referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="22" author="Eversis">
        <comment>View Settings audit</comment>
        <addColumn tableName="view">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="view_option">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="23" author="Eversis">
        <comment>View Settings audit</comment>
        <createTable tableName="view_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="label" type="varchar(254)">
            </column>
            <column name="title" type="varchar(254)">
            </column>
            <column name="value_" type="varchar(254)">
            </column>
            <column name="default_" type="boolean" defaultValue="false">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_view_aud_rev_revinfo_rev"
                baseTableName="view_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
        <createTable tableName="view_option_aud">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rev" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="revtype" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="view_id" type="bigint">
            </column>
            <column name="label" type="varchar(254)">
            </column>
            <column name="title" type="varchar(254)">
            </column>
            <column name="value_" type="varchar(254)">
            </column>
            <column name="default_" type="boolean" defaultValue="false">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_view_option_aud_rev_revinfo_rev"
                baseTableName="view_option_aud" baseColumnNames="rev"
                referencedTableName="revinfo" referencedColumnNames="rev"/>
    </changeSet>
</databaseChangeLog>
