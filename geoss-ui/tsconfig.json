{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM", "ES2018.Promise"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@nuxtjs/i18n",
            "@types/node",
            "cookie-universal-nuxt",
            "node",
            "ua-parser-js",
            "elasticsearch"
        ]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}
